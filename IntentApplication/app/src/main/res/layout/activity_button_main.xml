<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_intro" />
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_1"
        android:inputType="textNoSuggestions"
        android:hint="@string/text_edit" />
    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text"
        android:layout_below="@id/text_view_1"
        android:layout_toRightOf="@id/edit_text"
        android:background="@color/colorAccent"
        android:textSize="80px"
        android:onClick="onClickStartNewActivity"
        android:text="@string/button_go" />
    <TextView
        android:id="@+id/textviewHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="50px"
        android:textSize="50px"
        android:background="#FF0000"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/CountingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Counting"/>
</LinearLayout>